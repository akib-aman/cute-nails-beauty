// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ─────────────────────────────────────────────────────────────────
// Booking table: one row per appointment
// ─────────────────────────────────────────────────────────────────
model Booking {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  phonenumber String
  start       DateTime
  end         DateTime
  // Store treatments as a JSON array of objects { name, price }
  treatments  Json
  total       Float
  createdAt   DateTime @default(now())
}
