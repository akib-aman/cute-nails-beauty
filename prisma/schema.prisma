// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ─────────────────────────────────────────────────────────────────
// Booking table: one row per appointment
// ─────────────────────────────────────────────────────────────────
model Booking {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String
  phonenumber String
  start       DateTime
  end         DateTime
  treatments  Json
  total       Float
  createdAt   DateTime @default(now())
}